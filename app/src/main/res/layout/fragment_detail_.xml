<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   >
    <data>
        <variable name="dog" type="com.example.dogapp.model.DogBreed"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.Detail_Fragment"
        android:orientation="vertical">
    <ImageView
        android:layout_width="200dp"
        android:id="@+id/imv_avt"
        android:layout_height="200dp"
        android:src="@drawable/ic_baseline_person_24"
        android:layout_gravity="center"
        android:layout_margin="5dp"></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_name"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="NULL"
            android:textStyle="bold"></TextView>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="7"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
            android:columnCount="2"
            >
            <TextView
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="20dp"

                android:text="Breed for:"></TextView>
            <TextView
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="20dp"
                android:id="@+id/tv_bred_for"
                android:textStyle="bold"
                android:text="NULL"></TextView>
            <TextView
                android:layout_row="1"
                android:layout_column="0"
                android:layout_margin="20dp"
                android:text="Breed group:"></TextView>
            <TextView
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="20dp"
                android:id="@+id/tv_breed_group"
                android:textStyle="bold"
                android:text="NULL"></TextView>
            <TextView
                android:layout_row="2"
                android:layout_column="0"
                android:layout_margin="20dp"
                android:text="Life Span:"></TextView>
            <TextView
                android:layout_row="2"
                android:layout_column="1"
                android:layout_margin="20dp"
                android:id="@+id/tv_lifeSpan"
                android:textStyle="bold"
                android:text="NULL"></TextView>
            <TextView
                android:layout_row="3"
                android:layout_column="0"
                android:layout_margin="20dp"
                android:text="Origin:"></TextView>
            <TextView
                android:layout_row="3"
                android:layout_column="1"
                android:layout_margin="20dp"
                android:id="@+id/tv_origin"
                android:textStyle="bold"
                android:text="NULL"></TextView>
            <TextView
                android:layout_row="4"
                android:layout_column="0"
                android:layout_margin="20dp"
                android:text="Temperament:"></TextView>
            <TextView
                android:layout_row="4"
                android:layout_column="1"
                android:layout_margin="20dp"
                android:id="@+id/tv_temp"
                android:textStyle="bold"
                android:text="NULL"></TextView>
            <TextView
                android:layout_row="5"
                android:layout_column="0"
                android:layout_margin="20dp"
                android:text="Height:"></TextView>
            <TextView
                android:layout_row="5"
                android:layout_column="1"
                android:layout_margin="20dp"
                android:id="@+id/tv_height"
                android:textStyle="bold"
                android:text="NULL"></TextView>
            <TextView
                android:layout_row="6"
                android:layout_column="0"
                android:layout_margin="20dp"
                android:text="Weight:"></TextView>
            <TextView
                android:layout_row="6"
                android:layout_column="1"
                android:layout_margin="20dp"
                android:id="@+id/tv_weight"
                android:textStyle="bold"
                android:text="NULL"></TextView>

        </GridLayout>
    </LinearLayout>
    </LinearLayout>

</layout>